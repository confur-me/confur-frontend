@require './bs/variables'

$selection-color = lighten($link-color, 90%)

#search-suggest
  $border-color = rgb(39, 41, 43)
  border-color $border-color
  outline 0
  box-shadow inset 0 0 1px rgba(0, 0, 0, .075), 0 3px 8px rgba(red($border-color), green($border-color), blue($border-color), .3)
  left: 50%
  margin-left: -25%
  $border-style = 1px solid rgba(red($border-color), green($border-color), blue($border-color), 0.15)
  $border-radius = .2857rem
  position: fixed
  z-index: 9999
  background-color: white
  width: 50%
  max-width: 700px
  border-top: none
  border-left: $border-style
  border-right: $border-style
  border-bottom: $border-style
  border-bottom-left-radius: $border-radius
  border-bottom-right-radius: $border-radius
  max-height: 80%
  .media-heading
    a
      color: $text-color
      &:hover, &:focus
        text-decoration: none
  & > ul
    & > li
      cursor: pointer
      &:hover
        background-color: $selection-color
  .highlight
    background-color: $brand-primary
