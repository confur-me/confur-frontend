html, body
  height: 100%

body
  &.welcome-page
    background-color: #231F26
    background: url('/assets/welcome-bg.jpg') no-repeat
    background-size: cover
    background-position: center center
    color: #fff
    text-align: center

    .wrapper
      display: table
      width: 100%
      height: 100%
      min-height: 100%
      background-color: rgba(24, 32, 36, 0.7)

    .wrapper-inner
      display: table-cell
      //vertical-align: top // for Mobile
      vertical-align: middle

    .cover-container
      margin-right: auto
      margin-left: auto
      width: 700px

      & > .inner.cover > p
        line-height: 1.6

.welcome-footer
  position: fixed
  bottom: 0
  left: 50%

