@require "variables"
@import "fonts"
@import "icons"

html
  position: relative
  min-height: 100%

body
  //margin-bottom: $footer-height
  & > .container
    padding-top: ($header-height + 20px)

.footer
  position: absolute
  bottom: 0
  width: 100%
  height: $footer-height
  background-color: #f5f5f5

.footer > .container
  padding-right: 15px
  padding-left: 15px
  .text-muted
    margin: 20px 0

#loading-bar-spinner
  top: $padding-top
  left: 7px

h1, h2, h3, h4, h5
  & > a, & > a:hover
    color: $text-color

.page-header
  & > h1 > i
    font-size: 36px
    margin-right: 10px

@import "lists"
@import "_header"
@import "_sidebar"
@import "welcome"
@import "buttons"
@import "videos"
@import "search"
@import "tags"
