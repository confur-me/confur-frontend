@require "variables"
@import "fonts"
@import "icons"
@import "_header"

html
  position: relative
  min-height: 100%

body
  //margin-bottom: $footer-height
  & > .container
    padding-top: ($header-height + 20px)

.footer
  position: absolute
  bottom: 0
  width: 100%
  height: $footer-height
  background-color: #f5f5f5

.footer > .container
  padding-right: 15px
  padding-left: 15px
  .text-muted
    margin: 20px 0

#loading-bar-spinner
  top: $padding-top
  left: 7px

@import "welcome"
@import "buttons"
@import "videos"
@import "search"

.video-js
  width: 100% !important
  min-height: 500px !important
  .vfs-tech
    height: auto !important
    position: relative !important
