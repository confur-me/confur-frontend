.video-item
  height: 350px
  .thumbnail
    border: none
    padding: 0
    border-radius: none
    transition: none
    margin-bottom: 40px
    position: relative
  .details
    padding-top: 6px
  .play
    width: 100%
    height: 100%
    position: absolute
    font-size: 12rem
    opacity: 0.4
    z-index: 10
    top: 0
    left: 0
    transition: opacity .3s
    cursor: pointer
    margin: 0
    text-align: center
    line-height: 12rem
    text-shadow: none
    padding-top: 4rem
    &:hover
      opacity: .8
